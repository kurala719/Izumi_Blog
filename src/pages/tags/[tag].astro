---
import BaseLayout from "../../layouts/BaseLayout.astro";
import TagMenu from "../../components/tagMenu/TagMenu.astro";
import PostDisplayer from "../../components/postDisplayer/postDisplayer.astro"

export async function getStaticPaths() {
    const allPosts = Object.values(import.meta.glob("../posts/*.md", { eager: true }));

    const uniqueTags = [...new Set(allPosts.map((post: any) => post.frontmatter.tags).flat())];

    return uniqueTags.map((tag) => {
        const filteredPosts = allPosts.filter((post: any) => post.frontmatter.tags && post.frontmatter.tags.includes(tag),);
        return {
            params: { tag },
            props: { posts: filteredPosts, allTags: uniqueTags },
        };
    });
}

const { tag } = Astro.params;
const { posts, allTags } = Astro.props;
---

<BaseLayout pageTitle={ tag }>
    <TagMenu all="/Izumi_Blog/blog" tags = { allTags } />
    <h1 style="text-align: center;">Tag: { tag }</h1>
    <PostDisplayer posts= { posts } />
</BaseLayout>
